{
    "name": "samlitowitz/no-globals",
    "description": "PHPStan rules to disallow use of global keyword and $GLOBALS variable",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Sam Litowitz",
            "email": "samlitowitz@users.noreply.github.com"
        }
    ],
    "require": {
        "phpstan/phpstan": "0.11.5"
    },
    "autoload": {
        "psr-4": {
            "SamLitowitz\\PHPStan\\Rules\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": ["tests/"]
    },
    "config": {
        "sort-packages": true
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "phpmd/phpmd": "^2.6",
        "phpro/grumphp": "^0.15.0",
        "phpunit/phpunit": "^7.5",
        "povils/phpmnd": "^2.1",
        "sensiolabs/security-checker": "^5.0",
        "squizlabs/php_codesniffer": "^3.4"
    }
}
